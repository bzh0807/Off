                    <!--android:text="@string/button10Name"-->
                    <!--android:textSize = "60px"-->
                    <!--android:textColor="#FFFFFF"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:background="@drawable/wings"-->
                    <!--android:layout_weight="1"/>-->
            <!--</TableRow>-->

        </TableLayout>

        </LinearLayout>
</ScrollView>

</RelativeLayout>